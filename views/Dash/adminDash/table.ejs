    <title>Total Employee</title>
    <!-- BOOTSTRAP CORE STYLE  -->
    <link href="/Dash/css/bootstrap.css" rel="stylesheet" />
    <!-- FONT AWESOME STYLE  -->
    <link href="/Dash/css/font-awesome.css" rel="stylesheet" />
    <!-- DATATABLE STYLE  -->
    <link
      href="/Dash/js/dataTables/dataTables.bootstrap.css"
      rel="stylesheet"
    />
    <!-- CUSTOM STYLE  -->
    <link href="/Dash/css/style.css" rel="stylesheet" />
    <!-- GOOGLE FONT -->
    <link
      href="http://fonts.googleapis.com/css?family=Open+Sans"
      rel="stylesheet"
      type="text/css"
    />
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <!-- LOGO HEADER END-->
    <%- include('./partials/nav.ejs') %>
    <!-- MENU SECTION END-->
    <div class="content-wrapper">
      <div class="container">
        <div class="row pad-botm">
          <div class="col-md-12">
            <h4 class="header-line">Employees Records</h4>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
              <div class="panel-heading">Total Number of Employee</div>
              <div class="panel-body">
                <div class="table-responsive">
                  <table
                    class="table table-striped table-bordered table-hover"
                    id="dataTables-example"
                  >
                    <thead>
                      <tr>
                        <th>userName</th>
                        <th>employeeID</th>
                        <th>contactNumber</th>
                        <th>email</th>
                        <th>Working Days</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(function(user, index) { %>
      <% 
        // Randomly assign grades A, B, or C
        var grades = ['gradeA', 'gradeB', 'gradeC'];
        var randomGrade = grades[Math.floor(Math.random() * grades.length)];
      %>
      <tr class="<%= (index % 2 === 0) ? 'even' : 'odd' %> <%= randomGrade %>">
        <td><%= user.userName %></td>
        <td><%= user.employeeID %></td>
        <td><%= user.profile.contactNumber %></td>
        <td><%= user.email %></td>
        <td class="center"><%= user.WorkingDays %></td>
      </tr>
    <% }); %>

                  
    

    
    
             
    

                
    
    
                 
    
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <!--End Advanced Tables -->
          </div>
        </div>
      </div>
    </div>

  
    

    
      

    
    <!-- FOOTER SECTION END-->
